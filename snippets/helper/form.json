{
    "form-for": {
		"prefix": "form-for",
		"body": "<%= form_for ${1:@object} do |${2:f}| %>\r\n\t<%= render 'layouts/error_messages', f: f.object %>\r\n\t\t\r\n\t<!-- form_for @object, html: { multipart: true }, do |f| -->\r\n\t<!-- form_for @object, html: { class: \"classname\" }, do |f| -->\r\n\r\n\t$3\r\n<% end %>\r\n  ",
		"description": "form_for"
    },
    "form-for-with-error": {
        "prefix": "form-for-with-errors",
        "body": "error_messages_for :${1:model}\r\n\r\nform_for @${2:$1} do |f|\r\n  $0\r\n",
        "description": "form_for with errors"
    },
    "form-for-label": {
        "prefix": "form-for-label",
        "body": "f.label :${1:attribute}${2:, \"${3:${1/[[:alpha:]]+|(_)/(?1: :\\u$0)/g}}\"}",
        "description": "form_for label"
    }, 
    "form-for-radio-box": {
        "prefix": "form-for-radio-box",
        "body": "f.radio_box :${1:attribute}, :${2:tag_value}",
        "description": "form_for radio_box"
    },
    "form-for-hidden-field": {
        "prefix": "form-for-hidden-field",
        "body": "f.hidden_field :${1:attribute}",
        "description": "form_for hidden_field"
    },   
    "form-for-file-field": {
		"prefix": "form-for-file-field",
		"body": "<%= ${1:f}.label :${2:attribute} %><br />\r\n<%= ${1:f}.file_field :${2:attribute} %>\r\n  ",
		"description": "ERB file field"
    },
    "form-for-password-field": {
		"prefix": "form-for-password-field",
